{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "es2016"],
    "target": "es6",
    "moduleResolution": "Node",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "example",
    "node_modules"
  ]
}